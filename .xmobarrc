-- -*- mode:haskell -*-
Config { font = "xft:Noto Sans CJK JP:size=14:Bold"
       , bgColor = "#1a1e1b"
       , fgColor = "#676767"
       , position = Top
       , lowerOnStart = False
       , commands = [ Run Network "wlp0s20f3" [ "-t"       , " ⇩ <rx> : ⇧ <tx>"
                                          , "-L"       , "400"
                                          , "-H"       , "2000"
                                          , "--normal" , "#d3d7cf"
                                          , "--high"   , "#88b986"
                                          ] 10

                    , Run MultiCpu        [ "-t"       , "<total0>.<total1>.<total2>.<total3>"
                                          , "-L"       , "40"
                                          , "-H"       , "85"
                                          , "--normal" , "#d3d7cf"
                                          , "--high"   , "#c16666"
                                          ] 50

                    , Run Memory          [ "-t"       , "<usedratio>%"
                                          , "-L"       , "40"
                                          , "-H"       , "90"
                                          , "--normal" , "#d3d7cf"
                                          , "--high"   , "#c16666"
                                          ] 10
                    , Run Battery         [ "-t"       , "<acstatus>"
                                          , "-L"       , "20"
                                          , "-H"       , "80"
                                          , "--low"    , "#c16666"
                                          , "--normal" , "#d3d7cf"
                                          , "--"
                                                , "-o" , "<left>% (<timeleft>)"
                                                , "-O" , "Charging <left>%"
                                                , "-i" , "<left>%"
                                          ] 50
                    , Run Date "%Y  %m/%d  %H:%M %a" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{≫%multicpu%  ≫%memory%  ≫%wlp0s20f3%  ≫%battery%  <fc=#c7a273>%date%</fc> "
       }
